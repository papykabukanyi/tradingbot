# Alpaca API Credentials (Required)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2  # Use paper trading URL for testing
ALPACA_DATA_URL=https://data.alpaca.markets/v2

# News API (Optional)
NEWS_API_KEY=your_news_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development  # Change to 'production' for Railway deployment

# Email Notification Settings (Optional)
SMTP_HOST=smtp.gmail.com  # Example for Gmail
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here  # Use app password for Gmail
EMAIL_FROM=your_email@gmail.com  # Sender address
EMAIL_TO=recipient@example.com  # Where to send trading alerts
